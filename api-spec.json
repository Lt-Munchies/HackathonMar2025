{
  "version": "1.0.0",
  "entities": {
    "User": {
      "fields": {
        "id": "string (UUID)",
        "handle": "string",
        "createdAt": "timestamp"
      }
    },
    "Post": {
      "fields": {
        "id": "string (UUID)",
        "title": "string",
        "message": "string",
        "codeSnippet": {
          "content": "string",
          "language": "string",
          "optional": true
        },
        "authorId": "string (UUID)",
        "createdAt": "timestamp",
        "likes": {
          "count": "integer",
          "reactions": {
            "type": "enum",
            "values": ["HEART", "THUMBS_UP", "ROCKET"]
          }
        },
        "isDeleted": "boolean"
      }
    },
    "Comment": {
      "fields": {
        "id": "string (UUID)",
        "message": "string",
        "codeSnippet": {
          "content": "string",
          "language": "string",
          "optional": true
        },
        "authorId": "string (UUID)",
        "postId": "string (UUID)",
        "parentCommentId": "string (UUID, optional)",
        "createdAt": "timestamp",
        "isAIResponse": "boolean",
        "aiModel": "string (optional)"
      }
    }
  },
  "endpoints": {
    "posts": {
      "getPosts": {
        "method": "GET",
        "path": "/api/posts",
        "params": {
          "page": "integer",
          "size": "integer",
          "sortBy": "enum(LATEST, MOST_LIKED)"
        },
        "auth": false
      },
      "createPost": {
        "method": "POST",
        "path": "/api/posts",
        "body": "Post",
        "auth": true
      },
      "updatePost": {
        "method": "PUT",
        "path": "/api/posts/{postId}",
        "body": "Post",
        "auth": true,
        "ownerOnly": true
      },
      "deletePost": {
        "method": "DELETE",
        "path": "/api/posts/{postId}",
        "auth": true,
        "ownerOnly": true
      }
    },
    "comments": {
      "getComments": {
        "method": "GET",
        "path": "/api/posts/{postId}/comments",
        "auth": false
      },
      "createComment": {
        "method": "POST",
        "path": "/api/posts/{postId}/comments",
        "body": "Comment",
        "auth": true
      }
    },
    "aiResponses": {
      "getAIResponse": {
        "method": "POST",
        "path": "/api/ai/respond",
        "params": {
          "targetType": "enum(POST, COMMENT)",
          "targetId": "string",
          "aiModel": "string"
        },
        "auth": true
      }
    },
    "reactions": {
      "createLike": {
        "method": "POST",
        "path": "/api/posts/{postId}/reactions",
        "body": {
          "type": "enum(HEART, THUMBS_UP, ROCKET)"
        },
        "auth": true
      },
      "deleteLike": {
        "method": "DELETE",
        "path": "/api/posts/{postId}/reactions/{reactionType}",
        "auth": true
      }
    },
    "auth": {
      "login": {
        "method": "POST",
        "path": "/api/auth/login",
        "body": {
          "handle": "string"
        }
      },
      "logout": {
        "method": "POST",
        "path": "/api/auth/logout",
        "auth": true
      }
    }
  }
}